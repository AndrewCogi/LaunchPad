            <LinearLayout
                android:id="@+id/buttonLayout_3_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="6dp">
                <Button
                    android:id="@+id/button_2_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_shape_bass_line_3_2"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/buttonLayout_3_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="6dp">
                <Button
                    android:id="@+id/button_3_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_shape_bass_line_3_3"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/buttonLayout_3_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="6dp">
                <Button
                    android:id="@+id/button_4_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_shape_bass_line_3_4"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
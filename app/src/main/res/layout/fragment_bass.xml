<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tool:context=".PianoFragment">

    <LinearLayout
        android:id="@+id/pad_contents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="5">

        <LinearLayout
            android:id="@+id/buttonLine_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/buttonLayout_1_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="6dp">
                <Button
                    android:id="@+id/button_1_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_shape_bass_line_1_1"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttonLayout_1_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="6dp">
                <Button
                    android:id="@+id/button_2_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_shape_bass_line_1_2"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttonLayout_1_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="6dp">
                <Button
                    android:id="@+id/button_3_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_shape_bass_line_1_3"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttonLayout_1_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="6dp">
                <Button
                    android:id="@+id/button_4_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_shape_bass_line_1_4"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonLine_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/buttonLayout_2_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="6dp">
                <Button
                    android:id="@+id/button_1_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_shape_bass_line_2_1"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/buttonLayout_2_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="6dp">
                <Button
                    android:id="@+id/button_2_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_shape_bass_line_2_2"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/buttonLayout_2_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="6dp">
                <Button
                    android:id="@+id/button_3_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_shape_bass_line_2_3"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/buttonLayout_2_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="6dp">
                <Button
                    android:id="@+id/button_4_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_shape_bass_line_2_4"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonLine_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/buttonLayout_3_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="6dp">
                <Button
                    android:id="@+id/button_1_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
